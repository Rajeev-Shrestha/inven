@using HrevertCRM.Data.ViewModels.User
@model HrevertCRM.Data.ViewModels.User.LoginInputModel

@{
    ViewBag.Title = "HrevertCRM-Login";
    Layout = "";


}
<link rel="stylesheet" type="text/css" id="theme" href="~/manual/theme/css/theme-default.css" />
<script type="text/javascript" src="~/manual/jquery.js"></script>
<script type="text/javascript" src="~/manual/jquery-ui.min.js"></script>
<script type="text/javascript" src="~/manual/bootstrap.min.js"></script>
<div class="login-container lightmode">
    <form asp-controller="Account" asp-action="login" class="form-horizontal" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        
        <div class="login-box animated fadeInDown">
            @*<div class="login-logo"></div>*@
            <div class="login-body">
                <div class="login-title"><strong>Log In</strong> to your account</div>
                <div class="login-title"><div asp-validation-summary="ModelOnly" class="text-danger"></div></div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="text" asp-for="Email" class="form-control" placeholder="E-mail" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        <a href="#" class="btn btn-link btn-block" data-toggle="modal" data-target="#forgetPassword">Forgot your password?</a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-info btn-block">Log In</button>
                    </div>
                </div>
                @*<div class="login-or">OR</div>
                <div class="form-group">
                    <div class="col-md-4">
                        <button class="btn btn-info btn-block btn-twitter"><span class="fa fa-twitter"></span> Twitter</button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-info btn-block btn-facebook"><span class="fa fa-facebook"></span> Facebook</button>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-info btn-block btn-google"><span class="fa fa-google-plus"></span> Google</button>
                    </div>
                </div>
                <div class="login-subtitle">
                    Don't have an account yet? <a href="#">Create an account</a>
                </div>*@
            </div>
            <div class="login-footer">
                <div class="pull-left">
                    &copy; 2017 Hrevert CRM
                </div>
                @*<div class="pull-right">
                    <a href="#">About</a> |
                    <a href="#">Privacy</a> |
                    <a href="#">Contact Us</a>
                </div>*@
            </div>
        </div>
    </form>

</div>

<div id="forgetPassword" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <form asp-controller="Account" asp-action="ForgotPassword" class="form-horizontal" method="post">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Forget Password</h4>
                </div>
                <div class="modal-body">
                    <input type="text" asp-for="Email" class="form-control" placeholder="E-mail" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info btn-block">Reset Password</button>
                </div>
            </form>
        </div>
    </div>
</div>
